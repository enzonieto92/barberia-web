---
import Layout from "../layouts/Layout.astro"
import Lista from "../components/lista.astro"
---


<Layout title="Barbershop Leman - Lista de Precios">
    <div class="container mx-auto py-6 px-4 sm:px-6">
        <div class="w-full max-w-md mx-auto text-center bg-gradient-to-t from-transparent to-blue-300  border-black border-x-2 border-y-2 p-4 sm:p-6 rounded-2xl shadow-slate-900 shadow-lg">
            <h1 class="font-bold text-3xl py-4">Lista de Precios</h1>
            <div class="text-md text-center flex-col justify-between py-3">
                <ul class="text-md text-center flex-col justify-between py-3">
                    <Lista/>
                </ul>
            </div>
    </div>
</Layout>



